<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wait_dialog_bg"
    >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        
        <ImageView 
            android:id="@+id/user_confirm_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/user_confirm_img"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            />
        
        <TextView 
            android:id="@+id/voice_confirm_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tips"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_toRightOf="@id/user_confirm_img"
            android:layout_margin="10dip"
            />
        
        <ImageView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_confirm_img_line"
            android:layout_below="@id/voice_confirm_txt"
            />
    </RelativeLayout>
    
    
    	<TextView
    	    android:id="@+id/confirm_dialog_txt"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_centerInParent="true"
	        android:textColor="@color/white"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:textSize="@dimen/chat_txt_size"
         />
</RelativeLayout>